<%- include('header') %>

<div class="ui grid">
  <div class="four wide column">
    <a class="avatar"
       href="/posts?author=<%= user._id %>"
       data-title="<%= user.name %> | <%= ({m: '男', f: '女', x: '保密'})[user.gender] %>"
       data-content="<%= user.bio %>">
      <img class="avatar" src="/img/<%= user.avatar %>">
    </a>
  </div>

  <div class="eight wide column">
    <form class="ui form segment" method="post" action="/posts">
      <div class="field required">
        <label>学号</label>
        <input type="text" name="title">
      </div>
      <div class="field required">
        <label>姓名</label>
        <input type="text" name="name">
      </div>
      <div class="field required">
        <label>座位号</label>
        <input type="text" name="sit">
      </div>
      <input type="submit" class="ui button" value="提交">
    </div>
  </form>
</div>

<%- include('footer') %>
