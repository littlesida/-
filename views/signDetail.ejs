<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Home</title>
    <script src="http://cdn.bootcss.com/jquery/3.1.1/jquery.min.js"></script>
    <script src="http://cdn.staticfile.org/semantic-ui/2.2.7/semantic.min.js"></script>
    <link href="http://cdn.staticfile.org/semantic-ui/2.2.7/semantic.min.css" rel="stylesheet">
    <style media="screen">
        body {
            padding: 15px;
        }
    </style>
</head>
<body>
    <!-- 导航栏 -->
    <div class="ui inverted menu">
        <a class="active item" href="/home"><i class="home icon"></i>主页</a>
        <a class="item">我的课程</a>
        <a class="item" href="/home">返回课程</a>
        <a class="item">查看二维码</a>
        <div class="right menu">
            <div class="item">
                <div class="ui transparent inverted icon input">
                    <i class="search icon"></i>
                    <input type="text" placeholder="Search">
                </div>
            </div>
            <a class="item" href="/signout">退出</a>
        </div>
    </div>

<div class="ui segment">
  <div class="ui grid">
    <div class="two wide column "></div>

    <div class="three wide column">
    <table class="ui celled  table  segment center aligned">
      <thead>
        <tr><th colspan="2">已签到列表 </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td >学号</td>
          <td >姓名</td>
        </tr>
        <% hadSigns.forEach(function (item) { %>
          <tr>
          <td ><%= item.stdId %></td>
          <td ><%= item.stdName %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

    <div class="one wide column"></div>
    <div class="three wide column">
    <table class="ui celled table segment center aligned">
      <thead>
        <tr><th colspan="2">未签到列表 </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td >学号</td>
          <td >姓名</td>
        </tr>
        <% notSigns.forEach(function (item) { %>
          <tr>
          <td ><%= item.stdId %></td>
          <td ><%= item.stdName %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

    <div class="one wide column"></div>

    <div class="three wide column">
    <table class="ui celled table  segment center aligned">
      <thead>
        <tr><th colspan="2">信息错误列表 </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td >学号</td>
          <td >姓名</td>
        </tr>
        <% errorSigns.forEach(function (item) { %>
          <tr>
          <td ><%= item.stdId %></td>
          <td ><%= item.stdName %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  </div>
</div>



</body>
</html>