<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Home</title>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/semantic.min.js"></script>
    <script src="/js/jquery.dataTables.min.js"></script>
    <script src="/js/dataTables.semanticui.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.15/css/dataTables.semanticui.min.css">
    <link href="/css/semantic.min.css" rel="stylesheet">
    <!-- http://cdn.staticfile.org/semantic-ui/2.2.7/semantic.min.css -->

</head>
<body>
    <!-- 导航栏 -->
    <div class="ui inverted menu">
        <a class="active item" href="/home"><i class="home icon"></i>主页</a>
        <a class="item">我的课程</a>
        <a class="item" href="/home/<%= coursename%>">返回课程</a>
        <a class="item" href = "/home/<%= coursename%>/<%= signname %>/qrcode" >查看二维码</a>
        <div class="right menu">
            <div class="item">
                <div class="ui transparent inverted icon input">
                    <i class="search icon"></i>
                    <input type="text" placeholder="Search">
                </div>
            </div>
            <a class="item" href="/signout">退出</a>
        </div>
    </div>

<div class="ui segment">
  <div class="ui grid">
    <div class="five wide column">
    <table class="ui celled  table  segment center aligned eg" >
      <thead>
        <tr><th colspan="2">已签到列表 </th>
        </tr>
        <tr>
          <th >学号</th>
          <th >姓名</th>
        </tr>
      </thead>
      <tbody>
        
        <% hadSigns.forEach(function (item) { %>
          <tr>
          <td ><%= item.stdId %></td>
          <td ><%= item.stdName %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

    <div class="five wide column">
    <table class="ui celled table segment center aligned eg">
      <thead>
        <tr><th colspan="2">未签到列表 </th>
        </tr>
        <tr>
          <th >学号</th>
          <th >姓名</th>
        </tr>
      </thead>
      <tbody>
        <% notSigns.forEach(function (item) { %>
          <tr>
          <td ><%= item.stdId %></td>
          <td ><%= item.stdName %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>


    <div class="five wide column segment">
    <table class="ui celled table  segment center aligned eg">
      <thead>
        <tr><th colspan="2">信息错误列表 </th>
        </tr>
        <tr>
          <th >学号</th>
          <th >姓名</th>
        </tr>
      </thead>
      <tbody>
        
        <% errorSigns.forEach(function (item) { %>
          <tr>
          <td ><%= item.stdId %></td>
          <td ><%= item.stdName %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  </div>
</div>



</body>

<script type="text/javascript">
$(document).ready(function() {
    $('.eg').DataTable();
} );
</script>

</html>