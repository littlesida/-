<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Course</title>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/semantic.min.js"></script>
    <link href="/css/semantic.min.css" rel="stylesheet">
    <!--
    <script>
        $(document).ready(function() {
            // 鼠标放到 dropdown 时显示下拉菜单，默认只有点击后才显示
            $('.dropdown.item').dropdown({
                on: 'hover'
            });
        });
    </script>
    -->
</head>
<body>
    <!-- 导航栏 -->
    <div class="ui inverted menu">
        <a class="item" href="/home"><i class="home icon"></i>主页</a>
        <a class="active item" href = "/home">我的课程</a>
        <a class="item" href="/home/<%= course.name%>/stulist">学生名单</a>
        <a class="item" href = "/createSign?courseName=<%= course.name%>">新建签到</a>
        <div class="right menu">
            <div class="item">
                <div class="ui transparent inverted icon input">
                    <i class="search icon"></i>
                    <input type="text" placeholder="Search">
                </div>
            </div>
            <a class="item" href="/signout">退出</a>
        </div>
    </div>

  <!-- 卡片栏 -->
  <div class="ui segment">
    <div class="ui grid">
      <div class="one wide column"></div>

        <div class="ui link cards">
          <div class="card">
            <div class="image">
              <img src="/img/upload_69a8f66017ca71dad5faada14e6580f7.jpg">
            </div>
            <div class="content">
              <div class="header"><%= course.name %></div>
              <div class="meta">
                <span>管理员: <%= course.manager %></span>
              </div>
              <div class="meta">
                <span>课程人数: <%= number %></span>
              </div>
              <div class="description">
                <span>课程描述: <%= course.bio %></span>
              </div>
           </div>
          <div class="extra content">
            <span>
              <i class="call icon"></i>
                15986215103
            </span>
          </div>
        </div>
      </div>

      <!-- 内容栏 -->
      <div class="one wide column"></div>
      <div class="ui divided items">
        <% signs.forEach(function (sign) { %>
        <%- include('./../components/signs', { sign: sign, courseName: course.name }) %>
        <% }) %>
      </div>

    </div>
  </div>

</body>
</html>