            <input type="text" placeholder="请输入姓名">
          </div>
        </td>
    </tr>
    -->
  </tbody>
  <tfoot>
    <tr><th colspan="3">
    <i class="edit icon"></i>
    <a class="ui primary button" href="/home/<%= course.name %>/edit">
    修改
    </a>
    </th>
  </tr></tfoot>
</table>
</div>
<script type="text/javascript">
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>
