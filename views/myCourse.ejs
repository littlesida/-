<%- include('header') %>

<div class="post-content">
    <div class="five wide column">
      <div class = "item grid">
          <div class = "content">
            <h3 class = "header">课程名称: <%= course.name %></h3>
            <div class = "description">管理员: <%= course.manager %></div>
            <div class = "description"> 课程人数: <%= number %></div>
            <div class = "description"> 课程描述: <%= course.bio %></div>
          </div>
      </div>
    </div>
<h3 class = "header">学生名单:</h3>
<table class="ui celled table" id="example" cellspacing="0" width="100%">
  <thead>
    <tr>
    <th>学号</th>
    <th>姓名</th>
    </tr>
  </thead>
  <tbody>

    <% datas.forEach(function (data) { %>
    <tr>
      <td><%= data[0] %></td>
      <td><%= data[1] %></td>
    </tr>

    <% }) %>
